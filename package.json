{
  "name": "test-postman-newman",
  "version": "1.0.0",
  "description": "project using postman",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "newman run tests/httpbin_org.postman_collection.json result/report.xml",
    "test2": "newman run tests/httpbin_org.postman_collection.json --reporters cli,junit --reporter-junit-export result/newman_report.xml",
    "test3": "newman run tests/httpbin_org.postman_collection.json --reporters cli,json --reporter-json-export result/outputfile.json",
    "test4": "newman run tests/httpbin_org.postman_collection.json --reporters html --reporter-html-export result/report.html --reporter-html-template template/template.hbs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manfer993/test-postman-newman.git"
  },
  "author": "Manuel Munoz",
  "bugs": {
    "url": "https://github.com/manfer993/test-postman-newman/issues"
  },
  "homepage": "https://github.com/manfer993/test-postman-newman#readme",
  "dependencies": {
    "newman": "^4.5.0",
    "newman-reporter-html": "^1.0.3"
  }
}
